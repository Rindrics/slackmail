{
  "name": "juzumaru-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Slack-powered email client monorepo",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc -p packages/core/tsconfig.build.json && tsc -p aws/tsconfig.build.json",
    "lint": "biome lint packages aws",
    "format": "biome format packages aws --write",
    "check": "biome check packages aws",
    "fix": "biome check packages aws --write",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r --parallel test:watch",
    "prepare": "husky"
  },
  "keywords": [
    "slack",
    "email",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "25.0.3",
    "husky": "9.1.7",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": "24.12.0"
  }
}
