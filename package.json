{
  "name": "juzumaru",
  "version": "0.1.0",
  "description": "Slack-powered email client with pluggable infrastructure",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:lambda": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "check": "biome check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "slack",
    "email",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "25.0.3",
    "esbuild": "0.27.2",
    "husky": "9.1.7",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": "24.12.0"
  }
}
