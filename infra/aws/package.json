{
  "name": "slackmail-aws",
  "version": "0.1.0",
  "private": true,
  "description": "AWS implementation and infrastructure for `@rindrics/slackmail`",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:lambda": "esbuild src/s3-handler.ts src/slack-handler.ts --bundle --platform=node --target=node20 --outdir=dist --external:@aws-sdk/*",
    "preview": "pnpm build:lambda && pulumi preview --stack dev",
    "up": "pnpm build:lambda && pulumi up --stack dev",
    "destroy": "pulumi destroy --stack dev",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.956.0",
    "@aws-sdk/client-sesv2": "^3.964.0",
    "@rindrics/slackmail": "workspace:*",
    "@sentry/serverless": "^7.120.4",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@pulumi/aws": "^7.15.0",
    "@pulumi/pulumi": "^3.215.0",
    "@smithy/util-stream": "^4.5.8",
    "@types/aws-lambda": "8.10.159",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "aws-sdk-client-mock": "^4.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "0.27.2",
    "typescript": "^5.9.3"
  }
}
