{
  "name": "juzumaru-aws",
  "version": "0.1.0",
  "private": true,
  "description": "AWS implementation and infrastructure for slackmail",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:lambda": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/*",
    "preview": "pnpm build:lambda && pulumi preview --stack dev",
    "up": "pnpm build:lambda && pulumi up --stack dev",
    "destroy": "pulumi destroy --stack dev",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "slackmail": "workspace:*",
    "@aws-sdk/client-s3": "3.956.0"
  },
  "devDependencies": {
    "@pulumi/aws": "^7.15.0",
    "@pulumi/pulumi": "^3.113.0",
    "@smithy/util-stream": "^4.5.8",
    "@types/aws-lambda": "8.10.159",
    "@types/node": "^25.0.3",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "0.27.2",
    "typescript": "^5.9.3"
  }
}
